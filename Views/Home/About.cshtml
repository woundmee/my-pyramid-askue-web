@inject IConfiguration Config;

@{
    string appName = Config.GetSection("AppInfo:AppName").Value!;
    string developer = Config.GetSection("AppInfo:Developer").Value!;
    string version = Config.GetSection("AppInfo:Version").Value!;
    string github = Config.GetSection("AppInfo:Github").Value!;
    string startDevDate = Config.GetSection("AppInfo:DevDate").Value!;
}


<h5 class="mb-5 text-secondary">О пириложении</h5>

<p>
    <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor" class="bi bi-triangle-half"
         viewBox="0 0 16 16">
        <path
            d="M8.065 2.016A.13.13 0 0 0 8.002 2v11.983l6.856.017a.12.12 0 0 0 .066-.017.2.2 0 0 0 .054-.06.18.18 0 0 0-.002-.183L8.12 2.073a.15.15 0 0 0-.054-.057zm-1.043-.45a1.13 1.13 0 0 1 1.96 0l6.856 11.667c.458.778-.091 1.767-.98 1.767H1.146c-.889 0-1.437-.99-.98-1.767z"/>
    </svg>
</p>
<p class="h2 mb-5">@appName</p>

<table class="table border-top border-secondary text-center text-light w-25">
    <tr>
        <td class="text-secondary">Разработал</td>
        <td>@developer</td>
    </tr>
    <tr>
        <td class="text-secondary">Github</td>
        <td><a href="@github" class="link-primary">@github</a></td>
    </tr>
    <tr>
        <td class="text-secondary">Версия</td>
        <td>@version</td>
    </tr>
    <tr>
        <td class="text-secondary">Начало</td>
        <td>@startDevDate</td>
    </tr>
</table>

<p class="mt-5"><a href="/" class="text-decoration-none btn border-secondary link-secondary">← Главное меню</a></p>